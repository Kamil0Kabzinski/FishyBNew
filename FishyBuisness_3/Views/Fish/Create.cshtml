@model FishyBuisness_3.Models.Fish
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create";
}

<h1>@localizer["Create"]</h1>

<h4>@localizer["Fish"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FishName" class="control-label">@localizer["FishName"].Value</label>
                <input asp-for="FishName" class="form-control" data-val="true" 
                       data-val-required="@localizer["data-val-required-FishName"]"
                       data-val-length="@localizer["data-val-length-FishName"]"
                       data-val-length-min="3"
                       data-val-length-max="60" />
                <span asp-validation-for="FishName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishDescription" class="control-label">@localizer["FishDescription"].Value</label>
                <input asp-for="FishDescription" class="form-control" 
                data-val="true"
                data-val-required="@localizer["data-val-required-FishDescription"]"
                data-val-length="@localizer["data-val-length-FishDescription"]"
                data-val-length-min="3"
                data-val-length-max="60" />
                <span asp-validation-for="FishDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spieces" class="control-label">@localizer["Spieces"].Value</label>
                <input asp-for="Spieces" class="form-control" />
                <span asp-validation-for="Spieces" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Habitat" class="control-label">@localizer["Habitat"].Value</label>
                <input asp-for="Habitat" class="form-control" />
                <span asp-validation-for="Habitat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnvironmentId" class="control-label">@localizer["Environment"].Value</label>
                <select asp-for="EnvironmentId" class="form-control" asp-items="ViewBag.EnvironmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lenght" class="control-label">@localizer["Length"].Value</label>
                <input asp-for="Lenght" class="form-control" />
                <span asp-validation-for="Lenght" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">@localizer["Weigth"].Value</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">@localizer["Price"].Value</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@localizer["BacktoList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
